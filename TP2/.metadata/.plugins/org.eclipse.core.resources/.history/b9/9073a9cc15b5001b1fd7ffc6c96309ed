
#ifndef ARRAYEMPLOYEES_H_
#define ARRAYEMPLOYEES_H_

#define TAM_NOMBRE 50
#define TAM_TEL 15
#define TAM_MAIL 25
typedef struct{

    int legajo;
    int idSector;
    char nombre[TAM_NOMBRE];
    int edad;
    char sexo;
    float sueldo;
    eFecha fNacimiento;
    eFecha fIngreso;
    int isEmpty;
    char telefono[TAM_TEL];
    char mail[TAM_MAIL];

}eEmpleado;

int inicializarEmpleados(eEmpleado* lista, int tam);

int mostrarEmpleado(eEmpleado* unEmpleado,eSector sectores[],int tamSec);
int mostrarEmpleados(eEmpleado* lista, int tam,eSector sectores[],int tamSec);
int altaEmpleado(eEmpleado lista[],int tam,eSector sectores[],int tamSec,int* pLegajo);
int buscarLibre(eEmpleado lista[],int tam);
int buscarEmpleado(eEmpleado lista[],int tam, int legajoBuscado);
int bajaEmpleado(eEmpleado lista[],int tam,int indice);
int menuModificar(eEmpleado lista[],int tam,int indice);//el menu
int modificarEmpleado(eEmpleado lista[],int tam,int indice);//este modifica todo los datos
int menuOrdenar(eEmpleado* lista, int tam);
int ordenarNombres(eEmpleado* lista, int tam,int cri);
int ordenarEdades(eEmpleado* lista, int tam,int cri);
int ordenarSexos(eEmpleado* lista, int tam,int cri);
int ordenarSueldos(eEmpleado* lista, int tam,int cri);
int ordenarFnacimiento(eEmpleado* lista, int tam,int cri);
int ordenarFingreso(eEmpleado* lista, int tam,int cri);

int cargarNombreEmpleado(int legajo,eEmpleado lista[],int tame,char nombre[]);

int ordenarSexoNombre(eEmpleado* lista, int tam);


#endif /* ARRAYEMPLOYEES_H_ */
