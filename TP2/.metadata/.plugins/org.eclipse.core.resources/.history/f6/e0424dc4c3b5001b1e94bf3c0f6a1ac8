
#ifndef ARRAYEMPLOYEES_H_
#define ARRAYEMPLOYEES_H_

#define TAM_NOMBRE 51
#define TAM_APELLIDO 51

typedef struct{

    int id;
    char name[TAM_NOMBRE];
    char lastName[TAM_APELLIDO];
    float salary;
    int sector;
    int isEmpty;

}Employee;

int altaEmpleado(Employee* list, int len,int* id);
int printEmployees(Employee* list, int len);
int mostrarEmpleado(Employee* unEmpleado);


int initEmployees(Employee* list, int len);
int addEmployees(Employee* list, int len,int id,char name[],char lastName[],float salary,int sector);//ex buscar libre
int findEmployeeById(Employee* list, int len, int id);
int removeEmployee(Employee* list, int len,int id);
int sortEmployees(Employee* list, int len,int order);


int menuModificar(Employee lista[],int tam,int indice);//el menu







int modificarEmpleado(Employee lista[],int tam,int indice);//este modifica todo los datos
int menuOrdenar(Employee* lista, int tam);
int ordenarNombres(Employee* lista, int tam,int cri);
int ordenarEdades(Employee* lista, int tam,int cri);
int ordenarSexos(Employee* lista, int tam,int cri);
int ordenarSueldos(Employee* lista, int tam,int cri);
int ordenarFnacimiento(Employee* lista, int tam,int cri);
int ordenarFingreso(Employee* lista, int tam,int cri);

int cargarNombreEmpleado(int legajo,Employee lista[],int tame,char nombre[]);



#endif /* ARRAYEMPLOYEES_H_ */
